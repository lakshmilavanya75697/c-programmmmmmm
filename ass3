#include <stdio.h>

 main() {
    int size, i, max, min;
printf("Enter the size of the array: ");
    scanf("%d", &size);
 int arr[size];
 printf("Enter the array elements:\n");
 for (i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }
    max = arr[0];
    min = arr[0];
    for (i = 1; i < size; i++) {
        if (arr[i] > max) {
            max = arr[i];
        }
        if (arr[i] < min) {
            min = arr[i];
        }
    }
 printf("Difference between maximum and minimum: %d\n", max - min);
}
